{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "declarationDir": "./dist",
    "sourceMap": true,
    "declarationMap": false,
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist"]
}
